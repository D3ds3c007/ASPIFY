    <style>
        /* Red theme */
        body {
            background-color: #f8f9fa;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            margin: 0;
        }
        .container-fluid {
            flex: 1;
            display: flex;
        }
        .sidebar {
            background-color: #dc3545;
            min-height: 100vh; /* Make sidebar fill the entire viewport height */
            position: sticky;
            top: 0;
            display: flex;
            flex-direction: column;
        }
        .sidebar .nav-link {
            color: #fff;
        }
        .sidebar .nav-link:hover {
            background-color: #bd2130;
        }
        .content {
            flex: 1;
            margin-top: 50px;
        }
        /* Custom scrollbar styles */
        ::-webkit-scrollbar {
            width: 12px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
