@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/js/codemirror.min.js"></script>
    <script src="~/js/javascript.min.js"></script>
    <style>
        /* Red theme */
        body {
            background-color: #f8f9fa;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            margin: 0;
        }
        .container-fluid {
            flex: 1;
            display: flex;
        }
        .sidebar {
            background-color: #f53838;
            min-height: 100vh; /* Make sidebar fill the entire viewport height */
            position: sticky;
            top: 0;
            display: flex;
            flex-direction: column;
            position: fixed !important;
        }
        .sidebar .nav-link {
            color: #fff;
        }
        .sidebar .nav-link:hover {
            background-color: #bd2130;
            border-radius: 5px;
        }
        .content {
            flex: 1;
            margin-top: 50px;
        }
        /* Custom scrollbar styles */
        ::-webkit-scrollbar {
            width: 12px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-grow-1">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <div style="height: 25px;"></div>
                        <h5 class="fw-medium"><img class="d-inline-block align-middle" src="assets/img/icons/logo.png" alt="" width="40" /> ASPIFY</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="generator" asp-action="entities">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#FFFFFF" stroke-width="2" style="margin-right: 8px;">
                                    <ellipse cx="12" cy="5" rx="9" ry="3" />
                                    <path d="M3 5v6c0 1.5 4 3 9 3s9-1.5 9-3V5M3 11v6c0 1.5 4 3 9 3s9-1.5 9-3v-6" />
                                </svg>
                                Entities
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="relationship" asp-action="relations">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#FFFFFF" stroke-width="2" style="margin-right: 8px;">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                    <path d="M3 9h18M9 21V9" />
                                </svg>
                                Entities Relation
                            </a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link" href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#FFFFFF" stroke-width="2" style="margin-right: 8px;">
                                    <path d="M21 16V8a2 2 0 0 0-1-1.732l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.732l7 4a2 2 0 0 0 2 0l7-4a2 2 0 0 0 1-1.732z" />
                                    <path d="M3.27 6.96L12 12.01l8.73-5.05M12 22.08V12" />
                                </svg>
                                Data Objects
                            </a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="directory" asp-action="explore">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#FFFFFF" stroke-width="2" style="margin-right: 8px;">
                                    <circle cx="11" cy="11" r="8" />
                                    <path d="M21 21l-4.35-4.35" />
                                </svg>
                                Explore
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="#FFFFFF" stroke-width="2" style="margin-right: 8px;">
                                    <path d="M12 5v10m-5-5l5 5 5-5" />
                                    <path d="M5 19h14" />
                                </svg>
                                Download
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 content">
                <div style="height: 25px;"></div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/dist/jstree.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
